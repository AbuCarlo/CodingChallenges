    "version": "0.2.0",
    "configurations": [
        {
            "name": "Read Test Files",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["-c", "test-files/Project Gutenberg - Art of War - UTF-8.txt", "test-files/Don Quixote.txt"]
        },
        {
            "name": "Read STDIN",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["<", "${workspaceFolder}/test-files/hello.txt"]
        },
        {
            "name": "Test --help",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["--help"]
        },
        {
            "name": "Test --version",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["--version"]
        }
    ]
}